<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/btn_numpicker_press"
                tools:context="com.example.ayou.jk_takeout.firstpage.view.CheckOutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_minefragment_top"
        android:id="@+id/check_out_ll_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_out_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_left_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/check_out_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/check_out_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥45"
            android:textColor="@color/color_minefragment_top"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/check_out_tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提交订单"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/color_shop_text"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/check_out_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/check_out_rl"
        android:layout_below="@id/check_out_ll_top"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_gray_press"
        android:layout_above="@id/check_out_rl"
        />

</RelativeLayout>
